<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >
    <LinearLayout
        android:id="@+id/editBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color1"
        app:layout_constraintTop_toTopOf="parent"
        >
        <Button
            android:background="@drawable/back"
            android:layout_marginStart="15dp"
            android:layout_width="@dimen/bar_icon"
            android:layout_height="@dimen/bar_icon"
            />
        <EditText
            android:id="@+id/imageName"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/color1"
            android:textSize="@dimen/head3"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/save"
        android:src="@drawable/save"
        android:layout_width="@dimen/capture_button_outside"
        android:layout_height="@dimen/capture_button_outside"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/turnLeft"
        android:src="@drawable/turn_left"
        android:background="@drawable/round_stroke"
        android:padding="15dp"
        android:layout_width="@dimen/capture_button_outside"
        android:layout_height="@dimen/capture_button_outside"
        app:layout_constraintTop_toTopOf="@id/save"
        app:layout_constraintBottom_toBottomOf="@id/save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/save"
        />
    <ImageView
        android:id="@+id/turnRight"
        android:src="@drawable/turn_right"
        android:background="@drawable/round_stroke"
        android:padding="15dp"
        android:layout_width="@dimen/capture_button_outside"
        android:layout_height="@dimen/capture_button_outside"
        app:layout_constraintTop_toTopOf="@id/save"
        app:layout_constraintBottom_toBottomOf="@id/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/save"
        />
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/editBar"
        app:layout_constraintBottom_toTopOf="@id/operateRecycler"
    />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/operateRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider"
    />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divider"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9"
        />
</androidx.constraintlayout.widget.ConstraintLayout>