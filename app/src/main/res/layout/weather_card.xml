<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color1"
    >
    <ImageView
        android:id="@+id/locationIcon"
        android:src="@drawable/location"
        android:layout_width="@dimen/bar_icon"
        android:layout_height="@dimen/bar_icon"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/locationText"
        android:text="@string/choose_city"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/head4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/locationIcon"
        app:layout_constraintStart_toEndOf="@id/locationIcon"
        app:layout_constraintBottom_toBottomOf="@id/locationIcon"
        />
    <ImageView
        android:id="@+id/weatherIcon"
        android:src="@drawable/ic_clear_day"
        android:background="@drawable/round_stroke"
        android:padding="10dp"
        android:backgroundTint="@color/white"
        android:layout_width="@dimen/weather_icon"
        android:layout_height="@dimen/weather_icon"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locationIcon"
        />
    <TextView
        android:id="@+id/degree"
        android:text="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/weather_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="@id/weatherIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/weatherIcon"
        app:layout_constraintBottom_toBottomOf="@id/weatherIcon"
        />
    <TextView
        android:id="@+id/C"
        android:text="Â°C"
        android:textSize="@dimen/head1"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/degree"
        app:layout_constraintStart_toEndOf="@id/degree"
        />
    <TextView
        android:id="@+id/dailySentence"
        android:text="@string/weather_hint"
        android:textColor="@color/white"
        android:background="@drawable/rectangle_stroke"
        android:padding="10dp"
        android:textSize="@dimen/head4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/weatherIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>